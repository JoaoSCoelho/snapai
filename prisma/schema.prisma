// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SimulationLog {
  id           Int      @id @default(autoincrement())
  simulationId Int
  project      String
  content      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ConfigContext {
  id              Int      @id @default(autoincrement())
  selectedProject String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model NodesFormContext {
  id                          Int      @id @default(autoincrement())
  addedToSimulation           String?
  numberOfNodes               Int
  size                        Int      @default(5)
  color                       String   @default("")
  draggable                   Boolean  @default(true)
  node                        String
  nodeParameters              Json
  usedPacket                  String
  usedPacketParameters        Json
  mobilityModel               String
  mobilityModelParameters     Json
  connectivityModel           String
  connectivityModelParameters Json
  interferenceModel           String
  interferenceModelParameters Json
  reliabilityModel            String
  reliabilityModelParameters  Json
  distributionModel           String
  distributionModelParameters Json
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
}

model RuntimeContext {
  id          Int      @id @default(autoincrement())
  rounds      Int
  refreshRate Int?
  frameRate   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
