{
  "name": "snapai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start:electron": "cross-env NODE_ENV=development electron dist/electron/main.js",
    "dev:electron": "wait-on http://localhost:3000 && npm run build:electron && npm run start:electron",
    "build": "next build && tsc -p electron/tsconfig.json",
    "start": "cross-env NODE_ENV=production electron dist/electron/main.js"
  },
  "dependencies": {
    "electron": "^39.0.0",
    "next": "16.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.19.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "wait-on": "^9.0.1"
  }
}